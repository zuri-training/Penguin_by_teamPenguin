<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Penguin - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        
    <link rel="stylesheet" href="../../public/css/home.css">
    <link rel="stylesheet" href="../../public/css/footer.css">
    <link rel="stylesheet" href="../../public/css/category.css">
    <link rel="stylesheet" href="../../public/css/navbar.css">
    <script src="https://kit.fontawesome.com/347f221dac.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
</head>
<!-- done by MROGUNGA -->
<style>
    section.bottom-nav .right ul li {
        margin-left: -28px;
    }

    figure .imap {
        width: 120px;
        height: 120px;
    }
</style>
<body>
    <div class="wrapper">
        <section class="navbar">
            <div class="logo-container">
                <img src="/public/images/category-page/Logo.png" alt="the penguin logo">
                <img src="/public/images/category-page/menu.svg" alt="" class="menu"    id="menu">
            </div>
            <div class="navbar-1"   id="nav1">
                <nav>
                    <ul>
                        <li>
                            <a href="/" class="active">Home</a>
                        </li>
                        <li>
                            <a href="/categories">Categories</a>
                        </li>
                        <li>
                            <a href="/about">About Us</a>
                        </li>
                        <li>
                            <a href="#howto">How To</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="navbar-2"   id="nav2">
                <div class="icons">
                    <a href="/page/search"><img src="/public/images/category-page/search-icon.png" alt="a search icon"></a>
                    <img src="/public/images/category-page/profile-icon.svg" alt="a profile icon">
                    <img src="/public/images/category-page/Header-Save-Icon.svg" alt="a save icon">
                </div>
            </div>
        </section>

        <!-- Header -->
        <!-- end of header -->

        <!-- BEST DEALS -->

        <% if(count > 0) { %>

            <h2>Saved Products</h2>
            <section class="sec">
                <div class="products">
                    <div class="prev-next-btn">
                        <button><i class="fa fa-chevron-left"></i></button>
                        <button><i class="fa fa-chevron-right"></i></button>
                    </div>
                    
                        <% products.forEach(function(p) { %>
                            <div class="product">
                                
                                <figure>
                                    <img class="imap" src="<%= p.image %>" alt="">
                                    <figcaption><%= p.title %></figcaption>
                                    <p>starting from</p>
                                    <h3><%= p.price %></h3>
                                    <button type="button">Compare prices</button>
                                    
                                    <div>
                                        <img src="/public/images/category-page/4stars-rating.svg" alt="">
                                        <a class="" href="/product-save/<%= p._id %>">
                                            <%if(p.isSave) { %>
                                                <img src="/public/images/category-page/saved-icon.svg" alt=""   class="--saved-extra favorite">
                                        <% } else { %>
                                            <img src="/public/images/category-page/save-icon.svg" alt=""    class="--saved-reduction favorite">
                                            <% }%>
                                        </a>
                                    </div>
                                </figure>
                            
                            </div>
                        <% }) %>
            <% }  else { %>
                <h3>No products saved</h3>
            <% } %>
                <!-- card start -->
            </div>
            <!-- BEST DEALS END -->
        </section>