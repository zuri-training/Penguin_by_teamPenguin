<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="../../public/css/product.css">
    <link rel="stylesheet" href="../../public/css/navbar.css">
    <link rel="stylesheet" href="../../public/css/footer.css">
</head>


<!-- done by MROGUNGA -->

<style>
    .pricebtn {
        background-color: rgba(254, 250, 236, 1);
        /* border-radius: 1em; */
        border: 1px solid rgba(186, 90, 49, 1);
        /* padding: 1em; */
        width: 100%;
        /* margin: 10px 0; */
        outline: none;
    }
</style>

<body>
    <div class="wrapper">
        <section class="navbar">
            <div class="logo-container">
                <img src="/public/images/category-page/Logo.png" alt="the penguin logo">
                <img src="/public/images/category-page/menu.svg" alt="" class="menu"    id="menu">
            </div>
            <div class="navbar-1"   id="nav1">
                <nav>
                        <ul>
                            <li>
                                <a href="/">Home</a>
                            </li>
                            <li>
                                <a href="/page/categories">Categories</a>
                            </li>
                            <li>
                                <a href="/about">About Us</a>
                            </li>
                            <li>
                                <a href="/howto">How To</a>
                            </li>
                        </ul>
                </nav>
            </div>
            <div class="navbar-2"   id="nav2">
                <div class="icons">
                    <img src="/public/images/category-page/profile-icon.svg" alt="a profile icon">
                    <img src="/public/images/category-page/Header-Save-Icon.svg" alt="a save icon">
                </div>
            </div>
        </section>


        <!-- PRODUCTS -->

        <h2 id="heading"> Category | <%= title %> </h2>
        <section class="sec">
            <div class="products">

                <!-- Begining of card start -->
                <% products.forEach(function(p) { %>
                    <div class="card">
                        <div class="img">
                            <img src="<%= p.image %>" alt="laptop image">
                        </div>
                        <div class="pinfo">
                            <%= p.title %>
                        </div>
                        <h6 class="start">starting from</h6>
                        <div class="price"><%= p.price %></div>
                        <a href="<%= p.link %>"><button class="pricebtn" type="button">Click here to buy</button></a>
                        <div class="staricon">
                            <ul>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <i class="fa fa-star-half-o" aria-hidden="true"></i>
                            </ul>
                            <div class="bookmark">
                                
                                <a class="btn btn-default" href="/product-save/<%= p._id %>">
                                    <span class="fa <%- (p.isSave)? 'fa-star':'fa-star-o' %> fa-lg"></span>
                                    <%if(p.isSave) { %>
                                        <p>saved</p>
                                   <% } else { %>
                                        <p>Save</p>
                                    <% }%>
                                </a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
               
            </div>
        </section>
    </div>
    <section class="bottom-nav">
        <div class="left">
            <div class="logo-container">
                <img src="/public/images/category-page/Logo.png" alt="">
            </div>
            <div class="icon-container">
                <img src="/public/images/category-page/Facebook-icon.svg" alt="a facebook-icon">
                <img src="/public/images/category-page/Instagram-icon.svg" alt="an instagram-icon">
                <img src="/public/images/category-page/Twitter-icon.svg" alt="a twitter-icon">
                <img src="/public/images/category-page/LinkedIn-icon.svg" alt="a linkedin-icon">
            </div>
        </div>
        <div class="right">
            <nav>
                <h3>Penguin</h3>
                <ul>
                    <li>About us</li>
                    <li>Contact us</li>
                    <li>Coming soon</li>
                    <li>Careers</li>
                    <li>Collaborations</li>
                </ul>
            </nav>
            <nav>
                <h3>Learn More</h3>
                <ul>
                    <li>Getting Started</li>
                    <li>Safe shopping</li>
                    <li>Membership</li>
                    <li>Product Reviews</li>
                    <li>FAQ</li>
                </ul>
            </nav>
            <nav>
                <h3>Partners & Advertisers</h3>
                <ul>
                    <li>Register your shop</li>
                    <li>Register your brand</li>
                    <li>Advertising</li>
                    <li>Penguin API</li>
                </ul>
            </nav>
        </div>
    </section>

    <section class="footer">
        <footer>
            <div>
                <p>Â© 2022, All right reserved.</p>
            </div>
            <div>
                <p>Privacy Policy</p>
                <p>Terms of Service</p>
                <p>Cookies Settings</p>
            </div>
        </footer>
    </section>
</body>

</html>