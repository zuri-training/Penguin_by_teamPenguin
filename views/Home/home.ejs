<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Penguin - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        
    <link rel="stylesheet" href="../../public/css/home.css">
    <link rel="stylesheet" href="../../public/css/footer.css">
    <link rel="stylesheet" href="../../public/css/category.css">
    <link rel="stylesheet" href="../../public/css/navbar.css">
    <script src="https://kit.fontawesome.com/347f221dac.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
</head>
<!-- done by MROGUNGA -->
<style>
    section.bottom-nav .right ul li {
        margin-left: -28px;
    }

    figure .imap {
        width: 120px;
        height: 120px;
    }
</style>
<body>
    <div class="wrapper">
        <section class="navbar">
            <div class="logo-container">
                <img src="/public/images/category-page/Logo.png" alt="the penguin logo">
                <img src="/public/images/category-page/menu.svg" alt="" class="menu"    id="menu">
            </div>
            <div class="navbar-1"   id="nav1">
                <nav>
                    <ul>
                        <li>
                            <a href="/" class="active">Home</a>
                        </li>
                        <li>
                            <a href="/categories">Categories</a>
                        </li>
                        <li>
                            <a href="/about">About Us</a>
                        </li>
                        <li>
                            <a href="#howto">How To</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="navbar-2"   id="nav2">
                <div class="icons">
                    <a href="/page/search"><img src="/public/images/category-page/search-icon.png" alt="a search icon"></a>
                    <img src="/public/images/category-page/profile-icon.svg" alt="a profile icon">
                    <img src="/public/images/category-page/Header-Save-Icon.svg" alt="a save icon">
                </div>
            </div>
        </section>

        <!-- Header -->
        <main class="maincontent">
            <div class="HeadText grid">
                <h4 class="headmini">it's gaddget shopping</h4>
                <h1 class="headmain">BUT IT'S MUCH BETTER!!!</h1>
                <p class="headinfo">
                    You never have to buy gadgets beyond your
                    budget againcompare price of
                    gadgets as your
                    wish-list to get the
                    best prices available!
                </p>
                <button class="headbtn">Get Started <i id="icon" class="fa fa-long-arrow-right"></i>
                </button>
            </div>
            <div class="headimage grid center">
                <img src="../../public/images/home-page/hero-image.png" class="gadget" alt="landscape picture" width="#">
            </div>
        </main>
        <!-- end of header -->

        <!-- BEST DEALS -->

        <h2>Best Deals</h2>
        <section class="sec">
            <div class="products">
                <div class="prev-next-btn">
                    <button><i class="fa fa-chevron-left"></i></button>
                    <button><i class="fa fa-chevron-right"></i></button>
                </div>
                <% products.forEach(function(p) { %>
                    <div class="product">
                        
                        <figure>
                            <img class="imap" src="<%= p.image %>" alt="">
                            <figcaption><%= p.title %></figcaption>
                            <p>starting from</p>
                            <h3><%= p.price %></h3>
                            <button type="button">Compare prices</button>
                            
                            <div>
                                <img src="/public/images/category-page/4stars-rating.svg" alt="">
                                <a class="" href="/product-save/<%= p._id %>">
                                    <%if(p.isSave) { %>
                                        <img src="/public/images/category-page/saved-icon.svg" alt=""   class="--saved-extra favorite">
                                   <% } else { %>
                                    <img src="/public/images/category-page/save-icon.svg" alt=""    class="--saved-reduction favorite">
                                    <% }%>
                                </a>
                            </div>
                        </figure>
                     
                    </div>
                <% }) %>
                <!-- card start -->
               
                <!-- card end -->
                <!-- card start -->
                    <div class="card center mobile">
                        <p>Browse all deals</p><br>
                        <img src="../../public/images/home-page/browse-by-category/right-arrow.svg" alt="">
                    </div>
                <!-- card end -->
            </div>
            <!-- BEST DEALS END -->
        </section>
        <!-- category icon -->
        <h2 class="cat-text">Browse by category</h2>
        <section class="category">
            <div class="category-container">
                <% categories.forEach(function(c) { %>
                    <div class="--category" id="category-1">
                        <img src="/public/images/category-page/computers.svg" alt="" class="margin-bottom">
                        <h3>
                            <a href="<%= c.title %>"><%= c.title %> </a>
                        </h3>
                    </div>
                <% }); %>
            </div>
            <div class="category-container  container-2"    id="category">
                <div class="category-container">
                    <div class="--category  all-products">
                        <a href="/categories"><h3>All Categories</h3></a>
                    </div>
                    <div class="--category hide">
                        <h3></h3>
                    </div>
                </div>
            </div>
        </section>
        <!-- category icon end -->

        <!-- ABOUT PAGE -->
        <div class="about">
            <div class="aboutlogo">
                <img src="../../public/images/category-page/Logo.png" class="aboutimg" alt="">
            </div>
            <div class="abouttext">
                <h2>About Us</h2>
                <p class="aboutp">Penguin (by team_penguin) is a platform that allows users to compare the prices of various tech
                    gadgets across multiple online shopping platforms with the aim of helping users find the best
                    price for a product.</p>
            </div>
        </div>
        <!-- ABOUT PAGE -->

        <!-- HOW TO COMPARE -->
        <div class="compare" id="howto">
            <h2 class="cattext">How to compare</h2>
            <p>The penguin platform allows you to compare product prices in four (4) simple steps:</p>
        </div>
        <!-- category card -->
        <div class="comparebox">
            <div class="each-compare">
                <h1>01</h1>
                <div>
                    <p>Create an acount</p>
                <span>Sign Up <i id="icon" class="fa-solid fa-long-arrow-right"></i>
                </span>
                </div>
            </div>
            <div class="each-compare">
                <h1>02</h1>
                <div>
                    <p>Search for a product</p>
                <span>All Products<i id="icon" class="fa-solid fa-long-arrow-right"></i>
                </span>
                </div>
            </div>
            <div class="each-compare">
                <h1>03</h1>
                <div>
                    <p>Select desired product</p>
                <span>All Products <i id="icon" class="fa-solid fa-long-arrow-right"></i>
                </span>
                </div>
            </div>
            <div class="each-compare">
                <h1>04</h1>
                <div>
                    <p>Check listed price</p>
                <span>All Products <i id="icon" class="fa-solid fa-long-arrow-right"></i>
                </span>
                </div>
            </div>
        </div>
        <!-- category card -->
        <!-- FOOTER 1 SECTION -->
        <section class="bottom-nav">
            <div class="left">
                <div class="logo-container">
                    <img src="/public/images/category-page/Logo.png" alt="">
                </div>
                <div class="icon-container">
                    <img src="/public/images/category-page/Facebook-icon.svg" alt="a facebook-icon">
                    <img src="/public/images/category-page/Instagram-icon.svg" alt="an instagram-icon">
                    <img src="/public/images/category-page/Twitter-icon.svg" alt="a twitter-icon">
                    <img src="/public/images/category-page/LinkedIn-icon.svg" alt="a linkedin-icon">
                </div>
            </div>
            <div class="right">
                <nav>
                    <h3>Penguin</h3>
                    <ul>
                        <li>About us</li>
                        <li>Contact us</li>
                        <li>Coming soon</li>
                        <li>Careers</li>
                        <li>Collaborations</li>
                    </ul>
                </nav>
                <nav>
                    <h3>Learn More</h3>
                    <ul>
                        <li>Getting Started</li>
                        <li>Safe shopping</li>
                        <li>Membership</li>
                        <li>Product Reviews</li>
                        <li>FAQ</li>
                    </ul>
                </nav>
                <nav>
                    <h3>Partners & Advertisers</h3>
                    <ul>
                        <li>Register your shop</li>
                        <li>Register your brand</li>
                        <li>Advertising</li>
                        <li>Penguin API</li>
                    </ul>
                </nav>
            </div>
        </section>
    
        <section class="footer">
            <footer>
                <div>
                    <p>© 2022, All right reserved.</p>
                </div>
                <div>
                    <p>Privacy Policy</p>
                    <p>Terms of Service</p>
                    <p>Cookies Settings</p>
                </div>
            </footer>
        </section>
    
        <!-- <script src="/public/js/script.js"></script> -->
        <script src="/public/js/navbar.js"></script>
        <script>
            const favourites = document.querySelectorAll(".favorite");
            favourites.forEach(favourite => {
                favourite.addEventListener("click",() => {
                    const img = favourite.src;
                    const imgArray = img.split("/");
                    const imgLastPart = imgArray[imgArray.length -1 ];
                    if (imgLastPart === "save-icon.svg") {
                        imgArray.pop();
                        const src = imgArray.join("/");
                        favourite.src = src + "/saved-icon.svg";
                    } else if (imgLastPart === "saved-icon.svg") {
                        imgArray.pop();
                        const src = imgArray.join("/");
                        favourite.src = src + "/save-icon.svg";
                    }
                })
            })
        </script>
    </body>
    </html>